@using System.Web.UI.HtmlControls
@model IEnumerable<NA.Web.Models.Product.ProductViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Provision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeEpoch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DesignerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeEpoch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignerName)
            </td>
            <td>
                @if (item.HasAuction)
                {
                    @Html.ActionLink("Show auction", "ShowAcution", "Auction", new { productId = item.Id }, null)
                }
                else
                {
                    @Html.ActionLink("Add auction", "CreateAuction", "Auction", new { productId = item.Id }, null)
                }
            </td>
        </tr>
    }

</table>
